pipeline {
  agent any
   
  stages {
     
      
    stage('Destroy EC2') {
      steps {
          withAWS(credentials: 'aws-credentials', region: 'us-west-1') {
            sh '''
               git clone https://github.com/Django-automation/completing-task.git
               terraform init
               terraform apply -auto-approve
               terraform destroy -auto-approve
               '''
       }
     }
   } 
  }
}
